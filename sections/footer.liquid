<style> 
  #site-scroll { background:{{ section.settings.scroll_top_arrow_clr}};  }
  .site-footer { background-color:{{ section.settings.footer_bg_clr}}; }
  
  .newsletter { background:{{ section.settings.newsletter_background_clr}}; }
  .newsletter-title h3,
  .newsletter-title p { color:{{ section.settings.newsletter_text_clr}};  }
  
  #Subscribe { background:{{ section.settings.newsletter_button_clr}}; border:0; }
  #Subscribe:hover { background:{{ section.settings.newsletter_button_hover_clr}}; color:#fff; }
  
  .footer-top { border-bottom:1px dotted {{section.settings.footer_border_clr}};  }
  .footer-links { border-color:{{section.settings.footer_border_clr}};}
  .footer-top,
  .footer-links a,
  .footer-top p,
  .footer-bottom { color:{{ section.settings.footer_text_clr}}; }
  .footer-bottom a { color:{{ section.settings.footer_title_clr}}; }
  
  .footer-top h3 { color:{{ section.settings.footer_title_clr}}; }
  
  .addressFooter .fa { color:{{ section.settings.icon_colors}}; }
  .footer-top ul.social li a { color:{{ section.settings.social_icon_clr}}; }
</style>