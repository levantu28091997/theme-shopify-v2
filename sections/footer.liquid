<footer class="site-footer wow fadeInUp" role="contentinfo">
 
   <!-- Newsletter -->
    {% if section.settings.footer_newsletter_enable %}        
    <div class="newsletter">
          <div class="container">             
            <div class="row">
              <div class="col-md-6">
              	  <div class="newsletter-title">
                    {% if section.settings.footer_newsletter_title != blank %}
                    <h3>{{ section.settings.footer_newsletter_title }}</h3>
                    {% endif %}

                    {% if section.settings.footer_newsletter_sub_title != blank %}
                    <p>{{ section.settings.footer_newsletter_sub_title }}</p>
                    {% endif %} 
                  </div>              
               </div> 
              <div class="col-md-6">              	       
                <div class="newsletter-field"> 
                  {% include 'newsletter-form' %}                         
                </div>              
              </div>
            </div>         
        </div>
    </div>      
    {% endif %}  
  
  <div class="container wow fadeInUp">        
    <!-- Footer Top -->
    <div class="footer-top">
		 <div class="row">
           {% if section.settings.column1_title != blank %}
           <div class="col-sm-3 footer-links">
             <h3>{{ section.settings.column1_title }}</h3>
             <ul>
               {% assign footerCol1 = section.settings.column_1_menu | handleize %}
               {% for link in linklists[footerCol1].links %}
               <li>{{ link.title | link_to: link.url }}</li>
               {% else %}
               Please Create links from navigation and select menu from customization > secttion > footer 
               {% endfor %}
             </ul>
           </div>
           {% endif %}

           {% if section.settings.column2_title != blank %}
           <div class="col-sm-3 footer-links">
             <h3>{{ section.settings.column2_title }}</h3>
             <ul>
               {% assign footerCol2 = section.settings.column_2_menu | handleize %}
               {% for link in linklists[footerCol2].links %}
               <li>{{ link.title | link_to: link.url }}</li>
               {% else %}
               Please Create links from navigation and select menu from customization > secttion > footer 
               {% endfor %}
             </ul>
           </div>
           {% endif %}

           {% if section.settings.column3_title != blank %}
           <div class="col-sm-3 footer-links">
             <h3>{{ section.settings.column3_title }}</h3>
             <ul>
               {% assign footerCol3 = section.settings.column_3_menu | handleize %}
               {% for link in linklists[footerCol3].links %}
               <li>{{ link.title | link_to: link.url }}</li>
               {% else %}
               Please Create links from navigation and select menu from customization > secttion > footer 
               {% endfor %}
             </ul>
           </div>
           {% endif %}

           <div class="col-sm-3 contact-box last">
             {% if section.settings.display_address_footer %}
               <h3>{{ section.settings.column4_title }}</h3>						
               <ul class="addressFooter">
                 <li>
                   <i class="fa fa-map-marker"></i>
                   <p>{{section.settings.address}}</p>
                 </li>
                 <li class="phone">
                   <i class="fa fa-phone"></i>
                   <p>{{ section.settings.phone }}</p>
                 </li>
                 <li class="email">
                   <i class="fa fa-envelope"></i>
                   <p>{{ section.settings.email }}</p>
                 </li>
               </ul>
             {% endif %}
             
             {% if section.settings.show_social_media %}                          
             	{% if section.settings.social_media_group_title != blank %}
             		<h3> {{section.settings.social_media_group_title }} </h3>
             	{% endif %}
             	{% include 'social-media' %} 
             {% endif %}
           </div>
		</div>
    </div>
    
    <!-- Footer Bottom -->
    <div class="footer-bottom">
      {% if section.settings.copyright_text %}
      <div class="row">
        <div class="col-md-6">
          {{ section.settings.copyright_text }}
          {% if section.settings.show_design_by %}
          <br/>Designed by <a href="http://adornthemes.com/" target="_blank">AdornThemes.com</a>.
          {% endif %}
        </div>
        {% if section.settings.show_payment_icons %}
        <div class="col-md-6 text-right"> 
          {% include 'payment-mode' %} 
        </div>
        {% endif %}
      </div>
      {% endif %}
    </div>    
  </div>
</footer>

