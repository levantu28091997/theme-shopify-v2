<div data-section-id="{{ section.id }}" data-section-type="section-slideshow-v3" style="{% if section.settings.margin_top != blank %}margin-top: {{section.settings.margin_top}}px;{%endif%} {% if section.settings.margin_bottom != blank %}margin-bottom: {{section.settings.margin_bottom}}px;{% endif %}">
  <div class="section-slideshow-v3">
    <div class="container container-v2">
      <div class="slider_wrapper">
        <div class="slick-side-h3 js-slideshow-v3">
          {% if section.blocks.size > 0 %}
          {% for block in section.blocks %}
          {% if block.type == "slideshow" %}
          <div class="slider_content">
            <div class="slider_text" style="background: {{block.settings.bg_info}}">
              {% if block.settings.title_slide != blank %}
              <h5 class="title-{{ block.id }}">{{block.settings.title_slide}}</h5>
              {% endif %}

              {% if block.settings.subtitle1 != blank %}
              <h3 class="subtitle-{{ block.id }}">{{block.settings.subtitle1}}</h3>
              {% endif %}

              {% if block.settings.content_slide != blank %}
              <p class="content-{{ block.id }}">{{block.settings.content_slide}}</p>
              {% endif %}

              {% if block.settings.subtitle2 != blank %}
              <h4 class="subtitle-{{ section.id }}">{{block.settings.subtitle2}}</h4>
              {% endif %}
              {% if block.settings.btn_slide != blank %}
              <div class="text-right">
                <a href="{{block.settings.url_slide}}" class="button-main2 btn-{{ block.id }}">{{block.settings.btn_slide}}</a>
              </div>
              {% endif %}
            </div>
            <figure class="slider_image d-none d-md-block">
              <a href="{{block.settings.url_slide}}" class="d-block">
                {% if block.settings.img_slide != blank %}
                <img data-src="{{block.settings.img_slide | img_url: 'master'}}" class="lazyload img-fluid" alt="_img_slide_">
                {% else %}               
                <img data-src="//via.placeholder.com/1608x1080" class="lazyload img-fluid" alt="_img_slide_">     
                {% endif %}
              </a>
            </figure>
            <figure class="slider_image_mb d-block d-md-none">
              <a href="{{block.settings.url_slide}}" class="d-block">
                {% if block.settings.img_slide != blank %}
                <img data-src="{{block.settings.img_slide | img_url: 'master'}}" class="lazyload img-fluid" alt="_img_slide_">
                {% else %}               
                <img data-src="//via.placeholder.com/450x650" class="lazyload img-fluid" alt="_img_slide_">     
                {% endif %}
              </a>
            </figure>
          </div>
          {% endif %}
          {% endfor %}
          {% endif %}
        </div>
        <div class="social d-none d-lg-flex">
        {% for block in section.blocks %}
        {% if block.type == "social" %}
        <a href="{{block.settings.social_url}}" class="d-block">
          <i class="{{block.settings.social_icon}}"></i>
        </a>
        {% endif %}
        {% endfor %}
      </div>
      </div>
    </div>
  </div>
</div>

<style>

  {% if section.blocks.size > 0 %}
  {% for block in section.blocks %}
  {% if block.type == "slideshow" %}
  .section-slideshow-v3 .slider_wrapper .slick-side-h3 .slider_content .slider_text .title-{{ block.id }} {
    color: {{block.settings.color_title}};
  }
  .section-slideshow-v3 .slider_wrapper .slick-side-h3 .slider_content .slider_text .subtitle-{{ block.id }} {
    color: {{block.settings.color_subtitle1}};
  }
  .section-slideshow-v3 .slider_wrapper .slick-side-h3 .slider_content .slider_text .content-{{ block.id }} {
    color: {{block.settings.color_content}};
  }
  .section-slideshow-v3 .slider_wrapper .slick-side-h3 .slider_content .slider_text .subtitle-{{ section.id }} {
    color: {{block.settings.color_subtitle2}};
  }
  .section-slideshow-v3 .slider_wrapper .slick-side-h3 .slider_content .slider_text .btn-{{ block.id  }} {
    color:{{block.settings.color_block_button}};
    border-color:{{block.settings.color_block_button}};
  }
  .section-slideshow-v3 .slider_wrapper .slick-side-h3 .slider_content .slider_text .btn-{{ block.id  }}:hover {
    border-color: {{block.settings.color_block_button_hover}} !important;
    color: {{block.settings.color_block_button_hover}} !important;
    box-shadow: 0 0.5em 0.5em -0.4em {{settings.color_block_button_hover}};
  }
  {% endif %}
  {% endfor %}
  {% endif %}


</style>
