<div data-section-id="{{ section.id }}" data-section-type="section-banner-v2" style="{% if section.settings.margin_top != blank %}margin-top: {{section.settings.margin_top}}px;{%endif%} {% if section.settings.margin_bottom != blank %}margin-bottom: {{section.settings.margin_bottom}}px;{% endif %}">
  <div class="section-banner-v2">
    <div class="{% if section.settings.select_width == 'full' %} {% else %} container container-v2 {% endif %}">
      <div class="row">
        <div class="col-12 col-md-4">
          <div class="banner-item">
            <div class="banner-img">
              <a href="{{section.settings.url_banner1}}" class="box-img">
                <img data-src="{% if section.settings.banner_img1 != blank %} {{section.settings.banner_img1 | img_url : 'master'}} {% else %} //via.placeholder.com/414x250 {% endif %}" class="lazyload img-fluid w-100" alt="_banner_img_">
              </a>
            </div>
            <div class="banner-info">
              {% if section.settings.title_banner1 != blank %}
              <h3 class="title-banner" style="color: {{section.settings.color_title1}}">
                {{section.settings.title_banner1}}
              </h3>
              {% endif %}

              {% if section.settings.btn_banner1 != blank %}
              <div class="box-button">
                <a href="{{section.settings.url_banner1}}" class="btn1-{{ section.id }}">
                  {{section.settings.btn_banner1}}
                  <i class="fa fa-caret-right" aria-hidden="true"></i>
                </a>
              </div>
              {% endif %}

            </div>

          </div>
        </div>
        <div class="col-12 col-md-4">
          <div class="banner-item">
            <a href="{{section.settings.url_banner2}}" class="box-img">
              <img data-src="{% if section.settings.banner_img2 != blank %} {{section.settings.banner_img2 | img_url : 'master'}} {% else %} //via.placeholder.com/414x250 {% endif %}" class="lazyload img-fluid w-100" alt="_banner_img_">
            </a>
            <div class="banner-info">
              {% if section.settings.title_banner2 != blank %}
              <h3 class="title-banner" style="color: {{section.settings.color_title2}}">
                {{section.settings.title_banner2}}
              </h3>
              {% endif %}

              {% if section.settings.btn_banner2 != blank %}
              <div class="box-button">
                <a href="{{section.settings.url_banner2}}" class="btn2-{{ section.id }}">
                  {{section.settings.btn_banner2}}
                  <i class="fa fa-caret-right" aria-hidden="true"></i>
                </a>
              </div>
              {% endif %}
            </div>

          </div>
        </div>
        <div class="col-12 col-md-4">
          <div class="banner-item">
            <a href="{{section.settings.url_banner3}}" class="box-img">
              <img data-src="{% if section.settings.banner_img3 != blank %} {{section.settings.banner_img3 | img_url : 'master'}} {% else %} //via.placeholder.com/414x250 {% endif %}" class="lazyload img-fluid w-100" alt="_banner_img_">
            </a>
            <div class="banner-info">
              {% if section.settings.title_banner3 != blank %}
              <h3 class="title-banner" style="color: {{section.settings.color_title3}}">
                {{section.settings.title_banner3}}
              </h3>
              {% endif %}

              {% if section.settings.btn_banner3 != blank %}
              <div class="box-button">
                <a href="{{section.settings.url_banner3}}" class="btn3-{{ section.id }}">
                  {{section.settings.btn_banner3}}
                  <i class="fa fa-caret-right" aria-hidden="true"></i>
                </a>
              </div>
              {% endif %}

            </div>

          </div>
        </div>
      </div>
    </div>
  </div>
</div>

<style>
  .section-banner-v2 .banner-item .banner-info .btn1-{{ section.id }} {
    color: {{section.settings.color_btn1}};
  }
  .section-banner-v2 .banner-item .banner-info .btn1-{{ section.id }}:hover {
    color: {{section.settings.color_btn1_hover}};
  }
  .section-banner-v2 .banner-item .banner-info .btn2-{{ section.id }} {
    color: {{section.settings.color_btn2}};
  }
  .section-banner-v2 .banner-item .banner-info .btn2-{{ section.id }}:hover {
    color: {{section.settings.color_btn2_hover}};
  }
  .section-banner-v2 .banner-item .banner-info .btn3-{{ section.id }} {
    color: {{section.settings.color_btn3}};
  }
  .section-banner-v2 .banner-item .banner-info .btn3-{{ section.id }}:hover {
    color: {{section.settings.color_btn3_hover}};
  }
</style>
