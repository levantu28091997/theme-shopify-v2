<div data-section-id="{{ section.id }}" data-section-type="section-video-product" style="{% if section.settings.margin_top != blank %}margin-top: {{section.settings.margin_top}}px;{%endif%} {% if section.settings.margin_bottom != blank %}margin-bottom: {{section.settings.margin_bottom}}px;{% endif %}">
  <div class="section-video-product mt-all">
    <div class="container container-v2">
      <div class="row align-items-center">
        <div class="col-lg-6 col-12">
          <div class="section-video">
            <div class="box-video">
              <div class="video-bg">
                {% if section.settings.video_img != blank %}
                <img data-src="{{section.settings.video_img | img_url:'master'}}" class="lazyload img-fluid w-100" alt="_img_banner_">
                {% else %}
                <img data-src="https://via.placeholder.com/570x670" class="lazyload img-fluid w-100" alt="_img_banner_">
                {% endif %}
              </div>
              <div class="video-content">
                <a data-fancybox href="{{section.settings.url_video1}}"> 
                  <span class="box-btn">
                    <span class="btn-banner">
                      <i class="fa fa-play"></i>
                      <span class="line-video line-1"></span>
                      <span class="line-video line-2"></span>
                      <span class="line-video line-3"></span>
                    </span>
                  </span>
                </a>
              </div>
            </div>
          </div>
        </div>
        <div class="col-lg-6 col-12">
          <div class="section-product">

            {% assign products_limit = section.settings.products_limit %}
            {% assign col = section.settings.select_collection %}
            <div class="product_best_sell">
              {% for product in collections[col].products limit: products_limit %}
              {% include 'product-item-list-v1' %}
              {% else %}
              {% for i in (1..5) %}
              {% include 'empty-product-item-list-v1' %}
              {% endfor %}
              {% endfor %}
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
{% schema %}
{
  "name": "VIDEO PRODUCT V1",
  "settings": [
    {
      "type": "header",
      "content": "Video"
    },
    {
      "type": "image_picker",
      "id": "video_img",
      "info": "670 x 670px recommended",
      "label": "Video Image"
    },
    {
      "type": "url",
      "id": "url_video1",
      "label": "URL Video",
      "info": "[Upload video .mp4 in here](/admin/settings/files)"
    },
    {
      "type": "header",
      "content": "Product"
    },

        {
          "type": "collection",
          "id": "select_collection",
          "label": "Select Collection"
        },
        {
          "type": "range",
          "id": "products_limit",
          "label": "Limit products",
          "min": 1,
          "max": 50,
          "step": 1,
          "default": 5
        },
    {
      "type": "header",
      "content": "Section Space"
    },
    {
      "type": "text",
      "id": "margin_top",
      "label": "Margin Top",
      "info": "Defined in pixels. Do not add the 'px' unit."
    },
    {
      "type": "text",
      "id": "margin_bottom",
      "label": "Margin Bottom",
      "info": "Defined in pixels. Do not add the 'px' unit."
    }
  ],
  "presets": [
    {
      "name": "VIDEO PRODUCT V1",
      "category": "HOME"
    }
  ]
}
{% endschema %}

