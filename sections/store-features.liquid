<div class="container"> {% if section.settings.title != blank %}
	<div class="section-header text-center">
		<h2><span>{{ section.settings.title }}</span></h2>
	</div>
	{% endif %}
	<ul class="row-table store-info">
		{% for block in section.blocks limit: section.blocks.size %}
		<li class="row-cell"  {{ block.shopify_attributes }}> 
          
            {% if block.settings.enable_icons %} 
              <i class="fa {{ block.settings.icons}}" aria-hidden="true" style="color:{{ section.settings.icons_clr }}"></i> 
            {% endif %}
          
            <div>              
              {% if block.settings.title %} 
              <h5>{{ block.settings.title}}</h5>
              {% endif %}
              {% if block.settings.text %} 
            <span class="sub-text"> {{ block.settings.text}} </span> 
            {% endif %} 
              
            </div>
		</li>
		{% endfor %}
	</ul>
	{% if section.blocks.size == 0 %}
	{% include 'no-blocks' %}
	{% endif %} </div>
{% schema %}
  {
    "name": "Store Features",
    "class": "index-section",   
	"max_blocks": 4,
	"settings":[
		{
            "type": "color",
            "id": "icons_clr",
            "label": "Icon color",
			"default":"#000"	
		}
	],
    "blocks": [
      {
        "type": "text_block",
        "name": "Column",
        "settings": [
          {
            "type": "checkbox",
            "id": "enable_icons",
            "label": "Show Icon",
            "default": true
          },
          {
            "type": "text",
            "id": "icons",
            "label": "Icon class name",
			"default":"fa-truck",
			"info":"How do i get class name(http://fontawesome.io/icons/)"

		  }, 		 
          {
            "type": "text",
            "id": "title",
            "label": "Heading",
            "default": "Add a title or tagline"
          },
          {
            "type": "richtext",
            "id": "text",
            "label": "Text",
            "default":"<p>Use this text to display your store information</p>"
          }         
         
        ]
      }
    ],
    "presets": [
      {
        "name": "Store Features",
        "category": "Store information",
        "blocks": [
          {
            "type": "text_block"
          },
          {
            "type": "text_block"
          },
          {
            "type": "text_block"
          }
        ]
      }
    ]
  }
{% endschema %} 
