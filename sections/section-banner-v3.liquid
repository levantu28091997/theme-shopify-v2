<div data-section-id="{{ section.id }}" data-section-type="section-banner-v3" style="{% if section.settings.margin_top != blank %}margin-top: {{section.settings.margin_top}}px;{%endif%} {% if section.settings.margin_bottom != blank %}margin-bottom: {{section.settings.margin_bottom}}px;{% endif %}">
 <div class="section-banner-v3 mt-all">
  <div class= "container container-v2">
    <div class="banner-item">
        <div class="banner-info {% if section.settings.location_info == 'left' %}banner-info-left {% elsif section.settings.location_info == 'center'%}banner-info-center text-center{% else %}banner-info-right {% endif %}">
          {% if section.settings.title_banner != blank %}
          <h3 class="title" style="color : {{section.settings.color_title_banner}}">
            {{section.settings.title_banner}}
          </h3>
          {% endif %}
          {% if section.settings.sub_title != blank %}
          <div class="subtitle">
            <p class="mb-0" style="color : {{section.settings.color_subtitle_banner}}">
              {{section.settings.sub_title}}
            </p>
          </div>
          {% endif %}

          {% if section.settings.button_banner != blank %}
          <a href="{{section.settings.url_banner}}" class="button-main1 d-inline-block">
            {{section.settings.button_banner}}
          </a>
          {% endif %}

        </div>
      
        <div class="banner-image">
          <a href="{{section.settings.url_banner}}">
            <img src="{% if section.settings.backgroud_image != blank %}{{section.settings.backgroud_image|img_url:'master'}}{% else %}//via.placeholder.com/1500x500{% endif %}" class="w-100">
          </a>
        </div>
    </div>
    </div>
  </div>

</div>
{% schema %}
{
  "name": "BANNER V3",
  "settings": [
      {
        "type": "select",
        "id": "location_info",
        "label": "Location info",
        "options": [
          {
            "value": "left",
            "label": "Left"
          },
          {
            "value": "center",
            "label": "Center"
          },
          {
            "value": "right",
            "label": "Right"
          }
        ],
        "default": "left"
      },
  {
      "type": "image_picker",
      "id": "backgroud_image",
      "label": " Image",
      "info": "1500 x 500px recommended"
    },
  {
      "type": "text",
      "id": "title_banner",
      "label": "Title banner",
      "default": "Baby Kids <strong>Toy & Play</strong>",
	  "info": "Color text use: <strong>text</strong>. Example: <strong>Toy & Play</strong>"
    },
  {
      "type": "color",
      "id": "color_title_banner",
      "label": "Color Title banner"
    },
  {
      "type": "text",
      "id": "sub_title",
      "label": "Sub Title banner",
      "default": "Shop Best Home Accessories For Children"
    },
  {
      "type": "color",
      "id": "color_subtitle_banner",
      "label": "Color Sub Title banner"
    },
  {
      "type": "text",
      "id": "button_banner",
      "label": "button banner",
      "default": "SHOP NOW"
    },
  {
      "type": "url",
      "id": "url_banner",
      "label": "URL button",
      "default": "/collections/all"
    },
    {
      "type": "header",
      "content": "Section Space"
    },
    {
      "type": "text",
      "id": "margin_top",
      "label": "Margin Top",
      "info": "Defined in pixels. Do not add the 'px' unit."
    },
    {
      "type": "text",
      "id": "margin_bottom",
      "label": "Margin Bottom",
      "info": "Defined in pixels. Do not add the 'px' unit."
    }
  ],
  "presets": [
    {
      "name": "BANNER V3",
      "category": "HOME"
    }
  ]
}
{% endschema %}

