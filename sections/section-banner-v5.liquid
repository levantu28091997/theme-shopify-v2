<div data-section-id="{{ section.id }}" data-section-type="section-banner-v5" style="{% if section.settings.margin_top != blank %}margin-top: {{section.settings.margin_top}}px;{%endif%} {% if section.settings.margin_bottom != blank %}margin-bottom: {{section.settings.margin_bottom}}px;{% endif %}">
  <div class="section-banner-v5 container container-v2 mt-all">
    
    <div class=" row align-items-center">
      
      <div class="col-md-6 info ">
        
        <div class="heading-inner" >
          <div class="title_heading">
            {% if section.settings.section_title != blank %}
            <h3 class="mb-0" style="color : {{section.settings.color_title}}">{{ section.settings.section_title }}</h3>
            {% endif %}
          </div>
        </div>

        {% if section.settings.banner_desc != blank %}
        <p style="color : {{section.settings.color_desc}}">{{ section.settings.banner_desc }}</p>
        {% endif %}

        <div class="box-button">
          {% if section.settings.btn_name1 != blank %}
          <a style="background-color:{{section.settings.bg_button}};color: {{section.settings.color_button}}" href="{{section.settings.url_button1}}" class="button-main1">{{section.settings.btn_name1}}</a>
          {% endif %}

          {% if section.settings.btn_name2 != blank %}
          <a style="background-color:{{section.settings.bg_button}};color: {{section.settings.color_button}}" href="{{section.settings.url_button2}}" class="button-main1">{{section.settings.btn_name2}}</a>
          {% endif %}

          {% if section.settings.btn_name3 != blank %}
          <a style="background-color:{{section.settings.bg_button}};color: {{section.settings.color_button}}" href="{{section.settings.url_button3}}" class="button-main1">{{section.settings.btn_name3}}</a>
          {% endif %}

          {% if section.settings.btn_name4 != blank %}
          <a style="background-color:{{section.settings.bg_button}};color: {{section.settings.color_button}}" href="{{section.settings.url_button4}}" class="button-main1">{{section.settings.btn_name4}}</a>
          {% endif %}
        </div>

      </div>
      <div class="col-md-6 picture">
        <div class=" w-100">
          {% if section.settings.img_banner != blank %}
          <a href="{{section.settings.url_image}}">
            <img src="{{section.settings.img_banner | img_url:'master'}}" class="img-fluid w-100">
          </a>
          {% else %}
          <a href="{{section.settings.url_image}}">
            <img src="//via.placeholder.com/700x660" class="img-fluid w-100" alt="">
          </a>
          {% endif %}
        </div>
      </div>
    </div>
    

    
  </div>
</div>
